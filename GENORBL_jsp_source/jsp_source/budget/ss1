           ps1=mk.con.prepareStatement(" SELECT TO_CHAR(TRUNC(SYSDATE),'DD-MON-RRRR')  "+
                                       " FROM DUAL ");

           rs1=ps1.executeQuery();

           while(rs1.next()){

                 sDate    = rs1.getString(1);
  
           }

           rs1.close();
           ps1.close();
           rs1 = null;
           ps1 = null;
